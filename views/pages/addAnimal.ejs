<%- include('admin') %>
<div class="content">
<form action="/admin/animal/add" method="POST"  class="container">
  <h2>Add New Animal</h2>
  
  <div class="form-group">
      <label for="nom">Name:</label>
      <input type="text" name="nom" class="form-control" required>
  </div>

  <div class="form-group">
      <label for="espece">Species:</label>
      <input type="text" name="espece" class="form-control" required>
  </div>

  <div class="form-group">
      <label for="age">Age:</label>
      <input type="number" name="age" class="form-control" required>
  </div>

  <div class="form-group">
      <label for="taille">Size:</label>
      <input type="text" name="taille" class="form-control" required>
  </div>



  

  <div class="form-group">
      <label for="sexe">Sex:</label>
      <select name="sexe" class="form-control" required>
          <option value="Male">Male</option>
          <option value="Female">Female</option>
      </select>
  </div>

  <div class="form-group">
      <label for="description">Description:</label>
      <input type="text" name="description" class="form-control">
  </div>

  <div class="form-group">
      <label for="recherche">Search:</label>
      <input type="text" name="recherche" class="form-control">
  </div>

  <div class="form-group">
      <label for="incompatibilite">Incompatibility:</label>
      <input type="text" name="incompatibilite" class="form-control">
  </div>

  <div class="form-group form-check">
    <input type="checkbox" id="vaccination" name="vaccination" class="form-check-input">
    <label for="vaccination" class="form-check-label">Vaccinated</label>
  </div>
  

  <button type="submit" class="btn btn-primary">Add Animal</button>
</form>
</div>