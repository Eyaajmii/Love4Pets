<%- include('admin') %>
<style>
    .content {
      margin-left: 250px;
      padding: 20px;
    }
</style>
<div class="content">
    <h1>Manage Adopters</h1>

    <table class="table table-bordered table-striped">
        <thead class="thead-dark">
            <tr>
                <th>Cin</th>
                <th>Last Name</th>
                <th>First Name</th>
                <th>Email</th>
                <th>Number Phone</th>
            </tr>
        </thead>
        <tbody>
            <% if (adoptants && adoptants.length > 0) { %>
                <% adoptants.forEach(adoptant => { %>
                    <tr>
                        <td><%= adoptant.cin %></td> 
                        <td><%= adoptant.nom  %></td> 
                        <td><%= adoptant.prenom  %></td> 
                        <td><%= adoptant.email  %></td> 
                        <td><%= adoptant.telephone %></td> 
                    </tr>
                <% }); %>
            <% } else { %>
                <tr>
                    <td colspan="5" class="text-center">Aucun adoptant trouv√©</td> 
                </tr>
            <% } %>
        </tbody>
    </table>
</div>
